<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <% activity1 = Activity.find(rand(1..10)) %>
    <% activity2 = Activity.find(rand(11..20)) %>
    <% activity3 = Activity.find(rand(21..30)) %>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img  class="d-block w-100" style="filter: brightness(70%)" src="<%= activity1.image%>" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h3><%= activity1.name %></h3>
                <p><%= activity1.description %></p>
            </div>
        </div>
        <div class="carousel-item">
           <img id="clip" class="d-block w-100" style="filter: brightness(70%)" src="<%= activity2.image%>" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h3><%= activity2.name %></h3>
                <p><%= activity2.description %></p>
            </div>
        </div>
        <div class="carousel-item">
            <img id="clip"class="d-block w-100" style="filter: brightness(70%)" src="<%= activity3.image%>" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h3><%= activity3.name %></h3>
                <p><%= activity3.description %></p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<div class="background-color">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 justify-centre">

      <div class="d-flex justify-content-between"style="margin-top: 70px" >
        <div class="search-bar">
        <h3>Search</h3>
        <div class="d-flex">
          <div class="search-box">
              <%= form_tag activities_path, method: :get do %>
                <%= text_field_tag :query,
                    params[:query],
                    class: "form-control",
                    placeholder: "Find an activity"
                  %>
              </div>
              <div>
                <%= submit_tag "Search", class: "btn-search" %>
              </div>
              <% end %>
        </div>
      </div>

      <div class="activity-type-bar">
        <h3>Activity Type</h3>
        <div class="d-flex">
          <div class="search-box">
              <%= form_tag activities_path, method: :get do %>
                <%= text_field_tag :query,
                    params[:query],
                    class: "form-control",
                    placeholder: "Find an activity"
                  %>
              </div>
              <div>
                <%= submit_tag "Search", class: "btn-search" %>
              </div>
              <% end %>
        </div>
      </div>
      </div>


        <div class="main-container">
          <div class="cards">
            <% @activities.each do |activity| %>

              <div class="card">
                <img class="card-img-top" src="<%= activity.image %>" alt="picture">
                <div class="card-body">
                <h3 class="card-title"><%= activity.name %></h3>
                <p class="card-text"><%= activity.description.truncate_words(20) %></p>
                  <div class="card-link">
                    <%= link_to toggle_favorite_activity_path(activity), remote: true, method: :post do %>
                    <%= render 'activities/like_button', activity: activity %>
                    <% end %>
                    <div>
                      <a href="<%= activity_path(activity) %>" class="btn-card">Check This Activity</a>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
